#!/usr/bin/env node
var run = require('./run');

var XlreConfigUpgrade = require('../lib/upgrade/config-upgrade');
var XlreConfig = require('../lib/common/config');

XlreConfig.createDefaultConfigFile();
XlreConfig.encodePlainTextPasswords();

XlreConfigUpgrade.run().then(function () {
    run.begin();
}).fail(function (err) {
    console.log(err);
});